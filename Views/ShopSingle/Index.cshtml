@model ProdutoView

@{
    ViewBreadcrumbs breadcrumbs = new();
    breadcrumbs.Title = "Produto";
    breadcrumbs.Breadcrumbs = new BreadcrumbsDTO[]{
        new BreadcrumbsDTO("In√≠cio", "/", "fa-solid fa-house"),
        new BreadcrumbsDTO("Produtos", "./shop"),
        new BreadcrumbsDTO("Produto")
    };

    ViewData["Title"] = breadcrumbs.Title;
}

@(await Component.InvokeAsync<BreadcrumbsViewComponent>(breadcrumbs))

<section class="item-details section">
    <div class="container mx-auto sm:px-4">
        <div class="top-area">
            <div class="flex flex-wrap  items-center">
                <div class="lg:w-1/2 px-4 md:w-full w-full">
                    <div class="product-images">
                        <main id="gallery">
                            <div class="main-img">
                                <img src="~/img/images/product-details/@Model.Imagens[0]" id="current" alt="...">
                            </div>
                            <div class="images">
                                @foreach (var (Imagem, Index) in Model.Imagens.Select((Imagem, Index) => (Imagem, Index)))
                                {
                                    if (Index != 0)
                                    {
                                        <img src="~/img/images/product-details/@Imagem" class="img" alt="...">
                                    }

                                }
                            </div>
                        </main>
                    </div>
                </div>
                <div class="lg:w-1/2 px-4 md:w-full w-full">
                    <div class="product-info">
                        <h2 class="title">@Model.NomeProduto</h2>
                        <p class="category">
                            @Model.PreInfo
                        </p>
                        <div>Disponivel: @Model.Quantidade</div>

                        <h3 class="price">
                            @if (Model.PrecoDesconto == "")
                            {
                                @Model.PrecoOriginal
                            }
                            else
                            {
                                @Model.PrecoDesconto
                                <span class="discount-price">@Model.PrecoOriginal</span>
                            }
                        </h3>
                        <p class="info-text">
                            @Model.Descricao
                        </p>

                        <div class="flex flex-wrap">
                            <div class="lg:w-1/3 px-4 md:w-1/3 w-full">
                                <div class="mb-4 color-option">
                                    <label class="title-label" for="size">Escolha a cor</label>

                                    <div class="flex gap-2">
                                        <label class="w-[17px] h-[17px] border rounded-[3px] border-slate-800 cursor-pointer flex items-center justify-center">
                                            <input autocomplete="off" id="slate" class="hidden peer/slate" type="radio" name="cor">
                                            <label for="slate" class="w-[13px] h-[13px] block rounded-[2px] cursor-pointer peer-checked/slate:bg-slate-800"></label>
                                        </label>

                                        <label class="w-[17px] h-[17px] border rounded-[3px] border-sky-500 cursor-pointer flex items-center justify-center">
                                            <input autocomplete="off" id="sky" class="hidden peer/sky" type="radio" name="cor">
                                            <label for="sky" class="w-[13px] h-[13px] block rounded-[2px] cursor-pointer peer-checked/sky:bg-sky-500"></label>
                                        </label>

                                        <label class="w-[17px] h-[17px] border rounded-[3px] border-red-500 cursor-pointer flex items-center justify-center">
                                            <input autocomplete="off" id="red" class="hidden peer/red" type="radio" name="cor">
                                            <label for="red" class="w-[13px] h-[13px] block rounded-[2px] cursor-pointer peer-checked/red:bg-red-500"></label>
                                        </label>

                                        <label class="w-[17px] h-[17px] border rounded-[3px] border-green-500 cursor-pointer flex items-center justify-center">
                                            <input autocomplete="off" id="green" class="hidden peer/green" type="radio" name="cor">
                                            <label for="green" class="w-[13px] h-[13px] block rounded-[2px] cursor-pointer peer-checked/green:bg-green-500"></label>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="lg:w-1/3 px-4 md:w-1/3 w-full">
                                <div class="mb-4 quantity text-center">
                                    <label for="color">Quantidade</label>
                                    <div class="count-input flex">
                                        <button class="button-qnt"><i class="fa-solid fa-minus"></i></button>
                                        <input autocomplete="off" type="text" value="1" class="input-qnt" />
                                        <button class="button-qnt"><i class="fa-solid fa-plus"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bottom-content">
                        <div class="flex flex-wrap gap-3">
                            <div class="button cart-button">
                                <a asp-action="Index" asp-controller="Cart" asp-route-id="@Model.Id" class="btn !flex !text-gray-800 hover:!text-white !w-fit">Adicionar ao carrinho</a>
                            </div>
                            <div class="wish-button">
                                <a asp-action="Index" asp-controller="Favorites" asp-route-id="@Model.Id" class="btn !flex !text-gray-800 hover:!text-white !w-fit !rounded-[3px] hover:!text-gray-800">Adicionar aos favoritos</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>