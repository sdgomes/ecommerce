@{
ViewBreadcrumbs breadcrumbs = new();
breadcrumbs.Title = "Solicitações de Trocas";
breadcrumbs.Breadcrumbs = new BreadcrumbsDTO[]{
new BreadcrumbsDTO("Início", "/", "fa-solid fa-house"),
new BreadcrumbsDTO("Perfil", "../", "fa-solid fa-user"),
new BreadcrumbsDTO("Trocas")
};

ViewData["Title"] = breadcrumbs.Title;
}

@(await Component.InvokeAsync<BreadcrumbsViewComponent>(breadcrumbs))


    <header class="bg-[#7762a1] text-white py-6">
        <div class="container mx-auto text-center">
            <h1 class="text-2xl font-bold">Andamento</h1>
            <p class="text-base mt-2">Acompanhe o andamento das solicitações abra os itens para ver com detalhes e
                preços.</p>
        </div>
    </header>

    <main class="container mx-auto py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            @foreach (var solicitacao in Model)
            {
            <div class="bg-white shadow-lg rounded-lg p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold">Nº da Solicitação #@solicitacao.Id</h2>
                    <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">Nº Pedido
                        @solicitacao.Id</span>
                </div>
                <div class="mb-4">
                    <p class="text-gray-700">Tipo: @solicitacao.Tipo</p>
                </div>
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500">UNIT</p>
                        <p class="text-xl font-bold">@solicitacao.Unidade</p>
                    </div>
                    <div>
                        <p class="text-gray-500">PRICE</p>
                        <p class="text-xl font-bold">$@solicitacao.Preco</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </main>










































