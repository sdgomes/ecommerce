@model ViewCartao

<div class="checkout-payment-form">
    <div class="md:w-1/2">
        <div class="single-form form-default">
            <label>Bandeira</label>
            <div class="select-items">
                <select name="card[@Model.Index].idBandeira"
                        class="form-control block appearance-none w-full py-1 px-2 text-base leading-[2.2] bg-white text-gray-800 border border-gray-200 rounded">
                    <option value="0">Selecione</option>
                    <option value="1">Visa</option>
                    <option value="2">Mastercard</option>
                    <option value="3">Elo</option>
                    <option value="4">Aura</option>
                    <option value="5">Amex</option>
                    <option value="6">Diners</option>
                    <option value="7">Jcb</option>
                    <option value="8">Discover</option>
                </select>
            </div>
        </div>
    </div>

    <div class="single-form form-default">
        <label>Nome do Titular</label>
        <div class="form-input form">
            <input name="card[@Model.Index].nomeTitular" type="text" placeholder="Nome do Titular">
        </div>
    </div>

    <div class="single-form form-default">
        <label>CPF do Titular</label>
        <div class="form-input form">
            <input name="card[@Model.Index].CPFTitular" type="text" placeholder="CPF do Titular">
        </div>
    </div>

    <div class="single-form form-default">
        <label>Número do cartão</label>
        <div class="form-input form">
            <input name="card[@Model.Index].numero" id="credit-input" type="text" placeholder="0000 0000 0000 0000">
            <img src="/img/images/payment/card.png" alt="card">
        </div>
    </div>
    <div class="payment-card-info">
        <div class="single-form form-default mm-yy">
            <input type="hidden" name="card[@Model.Index].dataValidade" value="">
            <label>Validade</label>
            <div class="expiration flex">
                <div class="form-input form">
                    <input name="mes" type="text" placeholder="MM">
                </div>
                <div class="form-input form">
                    <input name="ano" type="text" placeholder="YYYY">
                </div>
            </div>
        </div>
        <div class="single-form form-default">
            <label>CVC/CVV <span><i class="mdi mdi-alert-circle"></i></span></label>
            <div class="form-input form">
                <input name="card[@Model.Index].codigoSeguranca" type="text" placeholder="***">
            </div>
        </div>
    </div>

    <div class="single-form form-default">
        <div class="single-checkbox checkbox-style-3">
            <input type="checkbox" id="checkbox-3">
            <label for="checkbox-3"><span></span></label>
            <p>Definir esse cartão como principal.</p>
        </div>
    </div>
</div>