@model TransactionDTO
@{
ViewBreadcrumbs breadcrumbs = new();
breadcrumbs.Title = "Pedidos";
breadcrumbs.Breadcrumbs = new BreadcrumbsDTO[]{
new BreadcrumbsDTO("Início", "/", "fa-solid fa-house"),
new BreadcrumbsDTO("Perfil", "../", "fa-solid fa-user"),
new BreadcrumbsDTO("Meus Pedidos", "./", "fa-solid fa-box-open-full"),
new BreadcrumbsDTO("Pedido")
};

ViewData["Title"] = breadcrumbs.Title;
}

@(await Component.InvokeAsync<BreadcrumbsViewComponent>(breadcrumbs))

    <div class="flex flex-wrap py-16 px-10">
        <div class="w-7/12 px-3">

            @*transação + cliente + endereco*@
            <div class="bg-gray-100 rounded-lg p-5 mb-5">
                <h2 class="font-bold text-xl">Compra 1171 - 16 de maio</h2>
            </div>

            <div class="mb-5">
                <div class="card rounded-lg shadow-md bg-gray-100">
                    <div class="card-body">
                        <h2 class="card-title text-lg">Resumo da compra</h2>
                        <p class="flex justify-between items-center font-bold text-gray-800">
                            <span>Produto</span><span>R$ 15.52</span>
                        </p>
                        <p class="flex justify-between items-center"><span>Produtos</span><span>R$ 154.4</span></p>
                        <p class="flex justify-between items-center font-bold text-green-600"><span>Ferete</span><span
                                class="text-base">R$ 154.4</span></p>
                        <p class="flex justify-between items-center text-base text-gray-700"><span>Total</span><span>R$
                                1154.4</span></p>
                        <hr>
                        <p class="font-bold text-base"><span>Seu pagamento</span></p>
                        <p class="flex justify-between items-center"><span>Cartão: Fulana X</span><span>R$ 154.4</span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-green-900 mb-5">
                <div class="card rounded-lg shadow-md bg-gray-50">
                    <div class="card-body">
                        <div class="space-y-10">
                            <div class="flex gap-8 items-center">
                                <button class="btn btn-lg btn-circle bg-zinc-300 pointer-events-none relative">
                                    <i class="fa-solid fa-credit-card"></i>
                                    <div class="badge badge-error badge-lg absolute -bottom-3 -right-3 py-2	h-auto">
                                        <i class="fa-solid fa-xmark"></i>
                                    </div>
                                </button>

                                <div>
                                    <h2>Fulana X <b>Bandeira Y</b></h2>
                                    <i>Pagamento no credito recusado no dia 18 de novembro 2024</i>
                                </div>
                            </div>

                            <div class="flex gap-8 items-center">
                                <button class="btn btn-lg btn-circle bg-zinc-300 pointer-events-none relative">
                                    <i class="fa-solid fa-credit-card"></i>
                                    <div class="badge badge-success badge-lg absolute -bottom-3 -right-3 py-2	h-auto">
                                        <i class="fa-solid fa-check"></i>
                                    </div>
                                </button>

                                <div>
                                    <h2>Fulana X <b>Bandeira Y</b></h2>
                                    <i>Pagamento no credito recusado no dia 18 de novembro 2024</i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-5/12 px-3">
            <div class="bg-red-300 p-5 mb-5">2</div>
            <div class="bg-red-800 p-5 mb-5">2.2</div>
        </div>

        <div class="w-full px-3">
            <div class="bg-blue-400 p-5 mb-5">3</div>
        </div>
    </div>