@model List<ViewProdutosCart>

@foreach (var Item in Model)
{
    <div class="cart-single-list">
        <div class="flex flex-wrap  items-center">
            <div class="lg:w-1/12 md:w-1/12 px-4 w-full">
                <a asp-action="Index" asp-controller="ShopSingle" asp-route-id="@Item.Id"><img src="~/img/images/cart/@Item.Imagem" alt="..."></a>
            </div>
            <div class="lg:w-4/12 md:w-3/12 px-4 w-full">
                <h5 class="product-name">
                    <a asp-action="Index" asp-controller="ShopSingle" asp-route-id="@Item.Id">
                        @Item.DescricaoProduto
                    </a>
                </h5>
                <p class="product-des">
                    <span><em>Cor:</em> @Item.Cor</span>
                </p>
            </div>
            <div class="lg:w-2/12 md:w-2/12 px-4 w-full">
                <div class="count-input flex">
                    <button class="button-qnt"><i class="fa-solid fa-minus"></i></button>
                    <input type="text" value="@Item.Quantidade" class="input-qnt" />
                    <button class="button-qnt"><i class="fa-solid fa-plus"></i></button>
                </div>
            </div>
            <div class="lg:w-2/12 md:w-2/12 px-4 w-full">
                <p>@Item.PrecoOriginal</p>
            </div>
            <div class="lg:w-2/12 md:w-2/12 px-4 w-full">
                <p>@Item.PrecoDesconto</p>
            </div>
            <div class="lg:w-1/12 md:w-2/12 px-4 w-full">
                <a class="remove-item" href="javascript:void(0)"><i class="fa-light fa-xmark"></i></a>
            </div>
        </div>
    </div>
}