@{
    ViewBreadcrumbs breadcrumbs = new();
    breadcrumbs.Title = "Contate-nos";
    breadcrumbs.Breadcrumbs = new BreadcrumbsDTO[]{
        new BreadcrumbsDTO("Início", "/", "fa-solid fa-house"),
        new BreadcrumbsDTO("Contate-nos")
    };

    ViewData["Title"] = breadcrumbs.Title;
}

@(await Component.InvokeAsync<BreadcrumbsViewComponent>(breadcrumbs))

<section id="contact-us" class="contact-us section">
    <div class="container mx-auto sm:px-4">
        <div class="contact-head">
            <div class="flex flex-wrap ">
                <div class="w-full">
                    <div class="section-title">
                        <h2>Contate-nos</h2>
                        <p>Entrar em contato com a empresa é essencial para esclarecer dúvidas e resolver problemas de forma rápida e eficiente, seja por telefone, e-mail ou chat ao vivo. Isso permite uma comunicação direta e instantânea, eliminando mal-entendidos e garantindo uma experiência satisfatória para o cliente.</p>
                    </div>
                </div>
            </div>
            <div class="contact-info">
                <div class="flex flex-wrap ">
                    <div class="lg:w-1/3 px-4 md:w-full w-full">
                        <div class="single-info-head">

                            <div class="single-info">
                                <i class="lni lni-map"></i>
                                <h3>Endereço</h3>
                                <ul>
                                    <li>Rua Carlos Barattino 908 Vila Nova - Vila Mogilar, Mogi das Cruzes - SP, 08773-600</li>
                                </ul>
                            </div>
                            
                            <div class="single-info">
                                <i class="lni lni-phone"></i>
                                <h3>Ligue para nós</h3>
                                <ul>
                                    <li><a href="tel:+5511933299566">+55 11 93329 9566</a></li>
                                    <li><a href="tel:+551143127520">+55 11 4312 7520</a></li>
                                </ul>
                            </div>
                            
                            <div class="single-info">
                                <i class="lni lni-envelope"></i>
                                <h3>Email</h3>
                                <ul>
                                    <li><a href="mailto:support@purpleray.com.br">support@purpleray.com.br</a>
                                    </li>
                                    <li><a href="mailto:career@purpleray.com.br">career@purpleray.com.br</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                    <div class="lg:w-2/3 md:w-full px-4 w-full">
                        <div class="contact-form-head">
                            <div class="form-main">
                                <form class="form" method="post" action="assets/mail/mail.php">
                                    <div class="flex flex-wrap ">
                                        <div class="lg:w-1/2 px-4 md:w-1/2 w-full">
                                            <div class="mb-4 form-group">
                                                <input autocomplete="off" name="name" type="text" placeholder="Your Name" required="required">
                                            </div>
                                        </div>
                                        <div class="lg:w-1/2 md:w-1/2 px-4 w-full">
                                            <div class="mb-4 form-group">
                                                <input autocomplete="off" name="subject" type="text" placeholder="Assunto" required="required">
                                            </div>
                                        </div>
                                        <div class="lg:w-1/2 px-4 md:w-1/2 w-full">
                                            <div class="mb-4 form-group">
                                                <input autocomplete="off" name="email" type="email" placeholder="Email" required="required">
                                            </div>
                                        </div>
                                        <div class="lg:w-1/2 md:w-1/2 px-4 w-full">
                                            <div class="mb-4 form-group">
                                                <input autocomplete="off" name="phone" type="text" placeholder="Telefone" required="required">
                                            </div>
                                        </div>
                                        <div class="w-full px-4">
                                            <div class="mb-4 form-group">
                                                <textarea name="message" placeholder="Sua mensagem" class="!resize-none"></textarea>
                                            </div>
                                        </div>
                                        <div class="w-full px-4">
                                            <div class="mb-4 button">
                                                <button type="submit" class="btn !w-fit !flex !text-gray-800 hover:!text-white">Enviar mensagem</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>