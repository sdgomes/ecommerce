@model List<ViewHomeProductList>
<section class="home-product-list section">
    <div class="container mx-auto sm:px-4">
        <div class="flex flex-wrap ">
            @foreach (var Item in Model)
            {
                <div class="lg:w-1/3 px-4 md:w-1/3 w-full custom-responsive-margin">
                    <h4 class="list-title">@Item.Titulo</h4>

                    @foreach (var Produto in Item.Produtos)
                    {
                        <div class="single-list">
                            <div class="list-image">
                                <a 
                                                    asp-action="Index"
                                                    asp-controller="ShopSingle"
                                                    asp-route-categoria="@Produto.TipoProduto.ToLower()"
                                                    asp-route-subcategoria="@Produto.Subcategoria.ToLower()"
                                                    asp-route-idproduto="@Produto.IdProduto">
                                    <img src="~/img/images/home-product-list/@Produto.Imagem" alt="...">
                                </a>
                            </div>
                            <div class="list-info">
                                <h3>
                                    <a 
                                      asp-action="Index"
                                                    asp-controller="ShopSingle"
                                                    asp-route-categoria="@Produto.TipoProduto.ToLower()"
                                                    asp-route-subcategoria="@Produto.Subcategoria.ToLower()"
                                                    asp-route-idproduto="@Produto.IdProduto">@Produto.NomeProduto</a>
                                </h3>
                                <span>@Produto.PrecoOriginal</span>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>